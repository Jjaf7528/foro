
{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}Home{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container my-2">
        {% if app.user %}
            <h4 class="my-3 alert alert-light border" style="color: #000000;"> Bienvenido a mi FORO, <i>{{app.user.email | capitalize}}</i> </h4>
        {%endif%}
        <div class="row">
            <div class="col-md-8 my-2">
                <div class="p-2 border bg-white">
                    <div id="accordion" class="p-1 my-2">
                        <div class="card">
                            <div class="card-header" id="headingOne">
                                <h5 class="mb-0">
                                    <button class="btn btn-link" data-toggle="collapse" data-target="#collapseOne"
                                            aria-expanded="true" aria-controls="collapseOne">
                                       ¬øQuieres publicar algo nuevo?
                                    </button>
                                </h5>
                            </div>
                            
                            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                                <div id="collapseOne" class="collapse" aria-labelledby="headingOne"
                                     data-parent="#accordion"
                                     style="background-color: #DAF1F9">
                                    {{ form_start(form) }}
                                    <div class="row p-2">
                                        <div class="col-md-6 my-2">
                                            {{ form_widget(form.title, {attr:{'placeholder':'Titulo', 'class':'form-control'}}) }}
                                        </div>
                                        <div class="col-md-6 my-2">
                                            {{ form_widget(form.type, {attr:{'class':'form-control'}}) }}
                                        </div>
                                        <div class="col-md-12 my-2">
                                            {{ form_widget(form.description, {attr:{'class':'form-control', 'placeholder': '¬øQu√© quieres contar?'}}) }}
                                        </div>
                                        <div class="col-md-12 text-center">
                                            {{ form_widget(form.file, {attr:{'class':'form-control my-2'}}) }}
                                        </div>
                                        <div class="col-md-2 container text-center">
                                            {{ form_widget(form.submit, {attr:{'class':' form-control my-2 btn btn-primary'}}) }}
                                        </div>
                                    </div>
                                    {{ form_end(form) }}

                                </div>
                            {% else %}
                                <div id="collapseOne" class="collapse" aria-labelledby="headingOne"
                                     data-parent="#accordion">
                                    <div class="alert alert-dark my-4 border m-3">
                                        Si deseas publicar, por favor
                                    <a href="{{ path('userRegistration') }}">Registrate</a> o
                                    <a href="{{ path('login') }}">inicia sesi√≥n</a>
                                    </div>
                                </div>
                            {% endif %}


                        </div>
                    </div>
    
                    {% for post in posts %}
                        {% if post.file == null %}
                            {% set  first_row = 'col-md-12' %}
                            {% set second_row = 'd-none' %}
                        {% else %}
                            {% set  first_row = 'col-md-9' %}
                            {% set  second_row = 'col-md-3' %}
                        {% endif %}
                        <div class="container">
                            <div class="row border custom-shadow">
                                <div class=" {{ first_row }}">
                                    <div class=" my-2 px-1 py-2">
                                        <h4>
                                            <a href="{{ path('postDetails', {id: post.id}) }}">
                                                {{ post.title }}
                                            </a>
                                        </h4>                                        
                                            <p>Fecha de publicaci√≥n: {{ post.creation_date | date }}</p>
                                    <div class="my-2">
                                                <span class="alert-success py-1 px-5">{{ post.type }}</span>
                                    </div>
                                    <div>
                                            Descripcion: {{ post.description }}
                                    </div>
                                </div>
                            </div>
                                <div class="{{ second_row }} my-auto">
                                    {% if post.file != null %}
                                        <img src="{{ asset('uploads/files/' ~ post.file) }}" alt="Not found"
                                             width="100%">
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        <hr>
                    {% else %}
                        <div class="alert alert-warning"><Strong>NO hay ning√∫n post, s√© el primero!</Strong></div>
                    {% endfor %}
                    {# display navigation #}
                    <div class="navigation">
                        {{ knp_pagination_render(posts) }}
                    </div>                   
                </div>
            </div>
            <div class="col-md-4 my-2">
                <div class="p-1 border bg-white">
                    <div class="my-2 border px-1 py-2 alert alert-info">
                        <h5 class="my-3 text-center">‚ö†Ô∏è Importante:</h5>
                        <ul>
                            <li>üôè Por favor Comportate</li>
                            <li>ü§ù S√© respetuoso</li>
                            <li>ü§ì Aporta contenido de valor</li>
                            <li>‚òùÔ∏è S√≥lo 1 comentario por POST</li>
                            <li>üéô Poco a poco se va actualizando el foro</li>
                        </ul>

                    </div>
                    <div class="my-2 border px-1 py-2 alert alert-info">
                        <ul>
                            <li>Puedes seguirme en mis redes sociales:</li>
                        </ul>
                        <div class="text-center">
                            <h3>
                                <a href="#" target=""><i class="fa-brands fa-instagram"></i></a> |
                                <a href="#" target=""><i class="fa-brands fa-youtube"></i></a>
                            </h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
{% block javascripts %}
    {{ parent() }}    
    <script src="{{ asset('js/index.js') }}"></script>
    <script>
        $('.custom-file-input').on('change', function (event) {
            var inputFile = event.currentTarget;
            $(inputFile).parent()
                .find('.custom-file-label')
                .html(inputFile.files[0].name);
        });
    </script>
{% endblock %}

